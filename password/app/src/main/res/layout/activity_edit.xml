<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditActivity">

    <include android:id="@+id/e76453486786" layout="@layout/default_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/e76453486786"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/edit_tip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名    称： "
                app:layout_constraintTop_toTopOf="@id/edit_input_name"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_name"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_input_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/edit_tip_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/edit_tip_account1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号一： "
                app:layout_constraintTop_toTopOf="@id/edit_input_account1"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_account1"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_input_account1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/edit_tip_account1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_name"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/edit_tip_password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码一： "
                app:layout_constraintTop_toTopOf="@id/edit_input_password1"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_password1"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_input_password1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/edit_tip_password1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_account1"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/edit_tip_account2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号二： "
                app:layout_constraintTop_toTopOf="@id/edit_input_account2"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_account2"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_input_account2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/edit_tip_account2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_password1"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/edit_tip_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码二： "
                app:layout_constraintTop_toTopOf="@id/edit_input_password2"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_password2"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_input_password2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/edit_tip_password2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_account2"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/edit_tip_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备    注： "
                app:layout_constraintTop_toTopOf="@id/edit_input_remark"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_remark"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_input_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/edit_tip_remark"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_password2"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/edit_tip_otherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="别    名： "
                app:layout_constraintTop_toTopOf="@id/edit_input_otherName"
                app:layout_constraintBottom_toBottomOf="@id/edit_input_otherName"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/edit_input_otherName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/edit_tip_otherName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_input_remark"
                android:maxLines="3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>